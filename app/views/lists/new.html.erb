<div class="section">

	<div class="card">
		<h1>Post New</h1>
		<!-- 作成したListモデルをEachし、 フォームからPost出来るようにする -->
		<div class="row">
			<%= form_with model: List.new do |f| %>
			<div class="column">
				<h4>Title</h4>
				<%= f.text_field :title %>
			</div>

			<div class="column">
				<h4>Body</h4>
				<%= f.text_area :body %>
			</div>

			<div class="column">
				<%= f.submit '投稿' %>
			</div>
			<% end %>
		</div>
	</div>
</div>